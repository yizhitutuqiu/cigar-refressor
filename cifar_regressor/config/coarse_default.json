{
	"dataset_root": "/data/litengmo/ml-test/cifar-100-python",
	"checkpoint_dir": "/data/litengmo/ml-test/cifar_regressor/checkpoints/coarse-vit-small",

	"num_classes": 20,
	"pretrained_backbone": true,
	"use_cbam": true,
	"encoder_name": "vit_small_patch16_224",
	"hidden_features": 256,
	"dropout_p": 0.1,

	"batch_size": 128,
	"epochs": 30,
	"learning_rate": 0.0003,
	"weight_decay": 0.05,
	"backbone_lr_mult": 0.1,
	"num_workers": 4,
	"log_interval": 50,
	"val_split": 0.1,
	"seed": 42,
	"device": "cuda",
	"mixed_precision": true,

	"scheduler": {
		"type": "cosine",
		"eta_min": 1e-6
	},

	"aug": {
		"hflip_p": 0.5,
		"rotate_p": 0.2,
		"rotate_deg": 15,
		"affine_p": 0.2,
		"scale_min": 0.9,
		"scale_max": 1.1,
		"translate_frac": 0.1,
		"erase_p": 0.0,
		"erase_scale": [0.02, 0.1],
		"erase_ratio": [0.3, 3.3]
	}
}


