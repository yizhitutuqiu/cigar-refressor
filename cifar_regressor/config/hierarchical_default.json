{
	"dataset_root": "/data/litengmo/ml-test/cifar-100-python",
	"checkpoint_dir": "/data/litengmo/ml-test/cifar_regressor/checkpoints/hier_vit_small",

	"encoder_name": "vit_small_patch16_224",
	"pretrained_backbone": true,
	"use_cbam": false,

	"num_coarse": 20,
	"num_fine": 100,
	"hidden_features": 256,
	"dropout_p": 0.1,
	"use_film": true,
	"film_hidden": 256,
	"film_use_probs": true,

	"batch_size": 128,
	"epochs": 30,
	"learning_rate": 0.0003,
	"backbone_lr_mult": 0.1,
	"weight_decay": 0.05,
	"num_workers": 4,
	"log_interval": 50,
	"val_split": 0.1,
	"seed": 42,
	"device": "cuda",
	"mixed_precision": true,

	"lambda_coarse": 0.2,
	"scheduler": { "type": "cosine", "eta_min": 1e-6 }
}


